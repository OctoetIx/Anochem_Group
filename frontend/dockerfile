# frontend/Dockerfile
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM nginx:stable-alpine
COPY --from=build /app/dist /usr/share/nginx/html
# optionally remove default conf and use a simple one if needed
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
