# Stage 1: Build
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
COPY ../infra/.env ./   # <-- copy your .env
RUN npm run build

# Stage 2: Production
FROM node:18-alpine
WORKDIR /app
COPY package*.json ./
RUN npm ci --production
COPY --from=builder /app/dist ./dist
COPY ../infra/.env ./    # <-- copy .env here too
EXPOSE 2000
CMD ["node", "dist/index.js"]